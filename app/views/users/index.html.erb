<h1>Users</h1>

<table class="table table-striped table-bordered table-hover">
  <thead class="thead-dark">
    <tr class="text-center">
      <th>First Name</th>
      <th>Last Name</th>
      <th>Position</th>
      <th>Department</th>
      <th>Email</th>
      <th>Profile</th>
      <th>Show User</th>
    </tr>
  </thead>
  <tbody>
    <div id="users">
      <% @users.each do |user| %>
        <tr>
            <%= render user %>
          <td class="text-center">
            <%= button_to "Show user", user, :method => "get", class: 'btn btn-outline-secondary btn-sm'  %>
          </td>
        </tr>  
      <% end %>
    </div>
  <tbody>
</table>

<div class="row mb-3">
  <%= button_to "New user", new_user_path, :method => "get" , class: 'btn btn-primary' %>
</div>